{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "실행: test.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/test.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "UPBIT_ACCESS_KEY": "${env:UPBIT_ACCESS_KEY}",
                "UPBIT_SECRET_KEY": "${env:UPBIT_SECRET_KEY}"
            }
        },
        {
            "name": "현재 파일 실행",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "UPBIT_ACCESS_KEY": "${env:UPBIT_ACCESS_KEY}",
                "UPBIT_SECRET_KEY": "${env:UPBIT_SECRET_KEY}"
            }
        },
        {
            "name": "현재 파일 테스트",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["${file}"],
            "console": "integratedTerminal"
        }
    ]
} 