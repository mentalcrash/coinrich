{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "실행: trend_analyzer (BTC-15m+MA)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/trend_analyzer.py",
            "args": [
                "--market=KRW-BTC",
                "--unit=15",
                "--count=400",
                "--adx-threshold=25",
                "--chop-threshold=38.2",
                "--short-ma=5",
                "--mid-ma=20",
                "--long-ma=60",
                "--use-ma-alignment"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "UPBIT_ACCESS_KEY": "${env:UPBIT_ACCESS_KEY}",
                "UPBIT_SECRET_KEY": "${env:UPBIT_SECRET_KEY}"
            }
        },
